<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/main.css" />

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/client.js"></script>
    <!-- This link for font font-awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="all">
      <header>
        <div class="intro">
          <h1>Welcome to Shorties</h1>
          <h2>Tell your story, or make one better</h2>
          <form id="login">
            <input class="username-input" type="text" placeholder="username" name="username" />
            <button type="submit">Login</button>
          </form>
        </div>
        <h2 class="hidden" id="slogan">Tell your story, or make one better</h2>

      </header>

      <main>
        <div class="create-story-flex">
          <form class="story-form hidden">
            <header class="story-head">
              <input type="text" name="title" class="title" placeholder="Title of your Story" />
            </header>
            <div class="label-and-text">
              <textarea style="resize:none" name="form-content" class="form-content" placeholder="Manifest the rest"></textarea>
              <div class="buttons">
                <button type="button" class="cancel">Cancel</button>
                <button type="submit" class="submit">Submit</button>
              </div>
            </div>
          </form>
        </div>

        <div class="stories-container"></div>
      </main>
    </div>
  </body>
</html>
